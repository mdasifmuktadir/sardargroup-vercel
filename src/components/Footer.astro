                <div class="footer-widget widget-nav-menu wow fadeInUp" data-wow-delay=".3s">
                  <h5 class="title">Services</h5>
                  <ul>
                    {services.map((service)=>(
                      <li><a href={`/services/${service.id}/`}>{service.data.title}</a></li>
                    ))}
               
                    
