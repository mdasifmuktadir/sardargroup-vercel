                <div class="footer-widget wow fadeInUp" data-wow-delay=".1s">
                  <div class="footer-logo">
                    <a href="/">
                      <Image src={Logo} alt="Logos"  width="170" />
                    </a>
                  </div>
                  <div class="footer-text">
                    <p>{data.general.tagLine}
                    </p>
                  </div>
